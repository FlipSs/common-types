{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "commonjs",
    "target": "es5",
    "downlevelIteration": true
  },
  "exclude": [
    "node_modules",
    "tests",
    "dist"
  ]
}
